{
  "manifest_version": 2,

  "name": "Lexis",
  "description": "Word collector",
  "version": "1.0",
  "background": {
    "scripts": [ "background.js" ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Open Lexis"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["panel.js", "app.js"],
      "css": ["app.css"]
    }
  ]
}
